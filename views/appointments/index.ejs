<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Your Appointments</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="all-apps-body">
      <div class="all-apps-header">
        <h1>Your Appointments</h1>
        <a class="add-app-link" href="/users/<%=user._id%>/appointments/new">Book an Appointment</a>
      </div>
    <ul>
      <% appointments.forEach((appointment)=>{ %>
        <a href="/users/<%= user._id %>/appointments/<%= appointment._id %>">
        <li>
          <%= appointment.servicetype %> for <%= appointment.carmake %> on <%= appointment.date %> at <%= appointment.time %>
          </li>
        </a>
        <% }) %>
    </ul>
    </div>       
  </body>
</html>
